= will_paginate
.list-group
  - @pharms.each do |pharm|
    = link_to pharm_path(pharm), class: 'list-group-item' do
      span.row.display__block
        span.col-xs-2.col-sm-1
        span.col-xs-5.col-sm-3
          span.contact-name.list-group-item__contact
            strong = pharm.name
        span.col-xs-5.col-sm-2.text-right
          span.contact-phone.list-group-item__contact = pharm.dose
        span.col-sm-3.hidden-xs
          span.contact-email.list-group-item__contact = pharm.volume
        span.col-sm-3.hidden-xs
      span.contact-comment = pharm.comment
= will_paginate