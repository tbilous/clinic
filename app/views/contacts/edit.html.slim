- provide(:title, t('page.contact.edit'))
.container
  .page-header
    h1
      = yield(:title) + ': ' + @contact.name
  .row
    .col-sm-6.col-sm-offset-3
      = render '/contacts/shared/form_edit'
  hr
  = link_to contact_path(@contact), :class => 'btn', :title => t('back') do
    span.glyphicon.glyphicon-triangle-left
  br
  hr
