<% provide(:title, t(:page_user)) %>

<% if user_signed_in? %>
  <div class="jumbotron jumbotron__title">
    <div class="container">
      <h1><%= gravatar_for current_user %> <%=current_user.name %></h1>
    </div>
  </div>
<% end %>
<div class="container">
  <div class="well">
    <ul class="list-unstyled">
      <li><%= t("activerecord.models.name")+ ': ' + current_user.name %></li>
      <li>Email: <%= current_user.email %></li>
      <li><%= link_to t("edit.change"), edit_user_registration_path %></li>
    </ul>
  </div>
</div>

