<div class="container">
  <div class="row">
    <div class="col-lg-offset-3 col-md-offset-1 col-lg-6 col-md-10">
      <div class="well">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <fieldset>
            <legend><h2><%= t('.change_your_password') %></h2></legend>
              <%= f.hidden_field :reset_password_token %>
            
              <div class="form-group">
                <%= f.label :password, t('.new_password'), class: 'control-label' %>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
              </div>
            
              <div class="form-group">
                <%= f.label :password_confirmation, t('.confirm_new_password'), class: 'control-label' %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
              </div>
            
              <div class="form-group">
                <%= f.submit t('.change_my_password') %>
              </div>
            </fieldset>
          <% end %>
          <%= render "devise/shared/links" %>
      </div>
    </div> <!--col- end-->
  </div> <!--row end-->  
</div> <!--container end-->
