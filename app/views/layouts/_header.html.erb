<header class="header">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to image_tag("logo_opt.png", alt: "Medicines", class: "navbar-brand"), root_path, id: "logo"  %>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
        <%= nav_bar do %>
          <li><%= nav_link t(:page_home), root_path %></li>
          <li><a href="#">Link</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li class="divider"></li>
              <li><a href="#">Separated link</a></li>
              <li class="divider"></li>
              <li><a href="#">One more separated link</a></li>
            </ul>
          </li>
        <% end %>
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
        <%= nav_bar_right do %>
          <% if user_signed_in? %>
            <li><%= nav_link (t('patients.active') + ': ' + active_patient.name), edit_character_path(active_patient.id)  %> </li>
            <% if current_user.admin? %>
              <li><%= nav_link t('activerecord.model.user.names'), users_path %></li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <%= t('page.user.title') %>
                <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to  t('page.user.edit'), edit_user_registration_path %></li>
                <li><%= link_to t('page.user.view'), current_user %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to t(:sign_out), destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t(:sign_in), new_user_session_path %></li>
            <li><%= link_to t(:sign_up), new_user_registration_path %></li>
            <li><%= nav_link t(:page_about), about_path %></li>
          <% end %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
